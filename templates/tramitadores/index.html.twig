{% extends 'base.html.twig' %}

{% block title %}{{pagina}}{% endblock %}

{% block body %}
<div class="card">
        <div class="card-header">
            Listado
        </div>
        <div class="card-body">
        
        {% if modo == 1 %}
            <a href="{{path('tramitadores_new')}}" class="btn btn-primary" id="btn-agregar"><i class="fas fa-plus"></i></a>
            <a href="{{path('tramitadores_index',{'modo':'trash'})}}" class="btn btn-danger"><i class="fas fa-trash"></i> Usuarios Eliminados</a>
        {% else %}
            <a href="{{path('tramitadores_index')}}" class="btn btn-success"><i class="fas fa-trash-restore"></i> Usuarios Activos</a>
        {% endif %}
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Usuario</th>
                        <th>Nombre</th>
                        <th>TipoUsuario</th>
                        <th>Estado</th>
                        <th>FechaIngreso</th>
                        <th>Correo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for usuario in usuarios %}
                    <tr>
                        <td>{{ usuario.id }}</td>
                        <td>{{ usuario.username }}</td>
                        <td>{{ usuario.nombre }}</td>
                        <td>{{ usuario.usuarioTipo.nombre }}</td>
                        <td>{{ usuario.estado ? 'Activo' : 'Deshabilitado' }}</td>
                        <td>{{ usuario.fechaActivacion ? usuario.fechaActivacion|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ usuario.correo }}</td>
                        
                        <td>
                            <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                                {% if modo == 1 %}
                                <a href="{{path('tramitadores_edit',{'id':usuario.id})}}" class="btn btn-secondary"><spam class='fas fa-edit'></spam></a>
                                {{ include('tramitadores/_delete_form.html.twig',{'id_usuario':usuario.id}) }}
                                <a href="{{path('privilegio_index',{'id':usuario.id})}}" class="btn btn-warning" > <i class="fas fa-share-alt"></i></a>
                                {% else %}
                                <a href="{{path('tramitadores_restore',{'id':usuario.id})}}" class="btn btn-success"><spam class='fas fa-trash-restore'></spam></a>
                                {% endif %}
                                <button class="btn btn-info btn-sm reasignarTicketsBtn" data-toggle="modal" data-target="#reasignarTicketsModal" data-tramitador-actual-id="{{ usuario.id }}"><i class="fas fa-exchange-alt"></i></button>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">No hay Usuarios</td>
                    </tr>
                {% endfor %}
                </tbody>
                
            </table>
        </div>
        <div class="card-footer">
            <div class="navigation">
                {{ knp_pagination_render(usuarios,'@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig',{},{
                'position': 'centered',
                'rounded': true,
                }) }}
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="controles" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
        
          </div>
         
        </div>
      </div>
    </div>
    
    <div class="modal fade" id="reasignarTicketsModal" tabindex="-1" role="dialog" aria-labelledby="reasignarTicketsModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="reasignarTicketsModalLabel">Reasignar Tickets Pendientes</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form id="reasignarTicketsForm" method="post">
                <div class="form-group">
                    <input type="hidden" name="tramitadorActualId" id="tramitadorActualId" value="">
                    <label for="tramitadorNuevoId">Selecciona el nuevo tramitador:</label>
                    <select class="form-control" id="tramitadorNuevoId" name="tramitadorNuevoId" required>
                        <option value="">-- Selecciona un tramitador --</option>
                        {% for tramitador in tramitadores %}
                            <option value="{{ tramitador.id }}">{{ tramitador.nombre }}</option>
                        {% endfor %}
                    </select>
                </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            <button type="button" class="btn btn-primary" id="confirmarReasignacionBtn">Reasignar Tickets</button>
          </div>
        </div>
      </div>
    </div>



    <script>
    
        $('#confirmarReasignacionBtn').on('click', function() {
            var tramitadorActualId = $('#tramitadorActualId').val();
            var tramitadorNuevoId = $('#tramitadorNuevoId').val();
            console.log('Tramitador Actual ID:', tramitadorActualId);
            console.log('Tramitador Nuevo ID:', tramitadorNuevoId);
            if (tramitadorNuevoId) {

                if(confirm('¿Estás seguro de que deseas reasignar los tickets pendientes al nuevo tramitador? Esta acción no se puede deshacer.')) {
                    var actionUrl = "/tramitadores/"+tramitadorActualId+"/reasignar_tickets"
                    $.ajax({
                        url: actionUrl,
                        method: 'POST',
                        data: { tramitadorNuevoId: tramitadorNuevoId },
                        success: function(response) {
                            if (response.exito==true) {
                                alert('Tickets reasignados correctamente.');
                                $('#reasignarTicketsModal').modal('hide');
                            
                            } else {
                                alert('Error al reasignar los tickets: ' + response.mensaje);
                            }
                            
                        },
                        error: function() {
                            alert('Error al reasignar los tickets. Por favor, inténtalo de nuevo.');
                        }
                    });
                } else {
                    return; // Salir si el usuario cancela
                }
                
            } else {
                alert('Por favor, selecciona un tramitador nuevo.');
            }
        });

        $('#reasignarTicketsModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget) // Button that triggered the modal
            var tramitadorActualId = button.data('tramitador-actual-id') 
            var modal = $(this)
        
            modal.find('#tramitadorActualId').val(tramitadorActualId)
        });
    </script>
{% endblock %}
