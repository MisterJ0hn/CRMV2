{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
    <h1>Ticket</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Motivo</th>
                <td>{{ ticket.motivo }}</td>
            </tr>
            <tr>
                <th>Respuesta</th>
                <td>{{ ticket.respuesta }}</td>
            </tr>
            <tr>
                <th>DetalleCierre</th>
                <td>{{ ticket.detalleCierre }}</td>
            </tr>
            <tr>
                <th>FechaNuevo</th>
                <td>{{ ticket.fechaNuevo ? ticket.fechaNuevo|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>FechaAsignado</th>
                <td>{{ ticket.fechaAsignado ? ticket.fechaAsignado|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>FechaRespuesta</th>
                <td>{{ ticket.fechaRespuesta ? ticket.fechaRespuesta|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>FechaCierre</th>
                <td>{{ ticket.fechaCierre ? ticket.fechaCierre|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Folio</th>
                <td>{{ ticket.folio }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ticket_index') }}">back to list</a>

    <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}">edit</a>

    {{ include('ticket/_delete_form.html.twig') }}
{% endblock %}
