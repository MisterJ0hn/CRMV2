{% extends 'base.html.twig' %}

{% block title %}Ticket index{% endblock %}

{% block body %}
<form action="{{path('app_ticket_index')}}" method="get" id="bForm">
    <input type="hidden" name="bStatus" id="bStatus" value="{{status|default('')}}">
<section>
    
    <div class="row">
        {% set total = 0 %}
        {% for resumen in resumenes %}
       
        <div class="col-sm-6 col-md-3">
            
            <div class="info-box">
                <span class="info-box-icon bg-{{resumen[0].estado.color}}""><i class="{{resumen[0].estado.icon}}""></i></span>
    
                <div class="info-box-content">
                <span class="info-box-text">{{resumen[0].estado.nombre}}</span>
                <span class="info-box-number">{{resumen.valor}}</span>
                {% set total= total + resumen.valor %}
                <a href="#" class="small-box-footer" onclick="javascript:buscar({{resumen[0].estado.id}})">
                    Ver Más <i class="fas fa-arrow-circle-right"></i>
                </a>
                </div>

                
                <!-- /.info-box-content -->
            </div>
      
        </div>
        {% endfor %}
        <div class="col-sm-6 col-md-3">
            
            <div class="info-box">
                <span class="info-box-icon bg-info"><i class="far fa-flag"></i></span>
    
                <div class="info-box-content">
                <span class="info-box-text">Asignados</span>
                <span class="info-box-number">{{total}}</span>
               
                </div>

                
                <!-- /.info-box-content -->
            </div>
      
        </div>
        
    </div>
    
</section>
<section>


    
    {{ include('/cuadrosBusquedas/busquedaTicketsEncuestas.html.twig', {'TipoFiltro':TipoFiltro}) }}
</section>
</form>
<section>
{% if total>0 %}
   
        {{ render(controller('App\\Controller\\TicketController::resumen', {'ticketEstado':status,'fechainicio':dateInicio,'fechafin':dateFin,'compania':bCompania,'filtro':'','totalStatus':total,'tipoFecha':tipoFecha,'origen':origen,'folio':bFolio,'perfil':bPerfil})) }}
{% endif %}
</section>
<div class="card">
    <div class="card-body">

        <div class="table-responsive" style="height: 500px;">
            <table class="table table-head-fixed text-nowrap table-striped table-sm">
                <thead>
                    <tr><th>{{ knp_pagination_sortable(tickets, 'Tipo', 'ticketTipo.orden') }} {% if tickets.isSorted('tipoTicket.orden') %} <i class="fas fa-sort"></i>{% endif %}</th>
                        <th>{{ knp_pagination_sortable(tickets, 'SacFolio', 'folioSac') }} {% if tickets.isSorted('folioSac') %} <i class="fas fa-sort"></i>{% endif %}</th>
                        <th>{{ knp_pagination_sortable(tickets, 'Estado', 'estado.nombre') }} {% if tickets.isSorted('estado.nombre') %} <i class="fas fa-sort"></i>{% endif %}</th>
                        <th>Gestionar</th>
                        <th>{{ knp_pagination_sortable(tickets, 'Folio', 'contrato.folio') }} {% if tickets.isSorted('contrato.folio') %} <i class="fas fa-sort"></i>{% endif %}</th>
                        <th>{{ knp_pagination_sortable(tickets, 'AgendaId', 'contrato.agenda.id') }} {% if tickets.isSorted('contrato.agenda.id') %} <i class="fas fa-sort"></i>{% endif %}</th>
                        <th>{{ knp_pagination_sortable(tickets, 'U.Origen', 'origen.nombre') }} {% if tickets.isSorted('origen.nombre') %} <i class="fas fa-sort"></i>{% endif %}</th>
                        <th>{{ knp_pagination_sortable(tickets, 'P.Origen', 'origen.tipoUsuario.nombre') }} {% if tickets.isSorted('origen.tipoUsuario.nombre') %} <i class="fas fa-sort"></i>{% endif %}</th>
                        <th>{{ knp_pagination_sortable(tickets, 'Destino', 'destino.nombre') }} {% if tickets.isSorted('destino.nombre') %} <i class="fas fa-sort"></i>{% endif %}</th>
                        <th>{{ knp_pagination_sortable(tickets, 'Encargado', 'encargado.nombre') }} {% if tickets.isSorted('encargado.nombre') %} <i class="fas fa-sort"></i>{% endif %}</th>
                        <th>{{ knp_pagination_sortable(tickets, 'Importancia', 'importancia') }} {% if tickets.isSorted('importancia') %} <i class="fas fa-sort"></i>{% endif %}</th>
                        
                        <th>{{ knp_pagination_sortable(tickets, 'F. Pendiente', 'fechaAsignado') }} {% if tickets.isSorted('fechaAsignado') %} <i class="fas fa-sort"></i>{% endif %}</th>
                         <th>{{ knp_pagination_sortable(tickets, 'U. Gestión', 'fechaUltimaGestion') }} {% if tickets.isSorted('fechaUltimaGestion') %} <i class="fas fa-sort"></i>{% endif %}</th>
                        <th>{{ knp_pagination_sortable(tickets, 'F. Resuelto', 'fechaRespuesta') }} {% if tickets.isSorted('fechaRespuesta') %} <i class="fas fa-sort"></i>{% endif %}</th>
                       
                        
                    </tr>
                </thead>
                <tbody>
                {% for ticket in tickets %}
                    <tr>
                        <td><span class="badge badge-{{ticket.ticketTipo.colorBadge}}">{{ticket.ticketTipo.nombre}}</span></td>
                        <td>{{ ticket.folioSac }}</td>
                        <td>{{ ticket.estado ? ticket.estado:'' }}</td>
                        <td align="center"><a href="{{path('app_ticket_gestionar',{'id':ticket.id})}}" class="btn"><i class="far fa-paper-plane"></i></a></td>
                        <td>{{ ticket.contrato.folio }}</td>
                        <td>{{ ticket.contrato.agenda.id }}</td>
                        <td>{{ ticket.origen.nombre }}</td>
                        <td>{{ ticket.origen.usuarioTipo.nombre }}</td>
                        <td>{{ ticket.destino ? ticket.destino.nombre: '' }}</td>
                        <td>{{ ticket.encargado ? ticket.encargado.nombre: '' }}</td>
                        <td>{{ ticket.importancia ? ticket.importancia.Urgencia: '' }}</td>
                        <td>{{ ticket.fechaAsignado ? ticket.fechaAsignado|date('Y-m-d H:i') : '' }}</td>
                        <td>{{ ticket.fechaUltimaGestion ? ticket.fechaUltimaGestion|date('Y-m-d H:i') : '' }}</td>
                        <td>{{ ticket.fechaRespuesta ? ticket.fechaRespuesta|date('Y-m-d H:i') : '' }}</td>
                       
                    
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="10">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer clearfix">
             {# display navigation #}
        <div class="navigation">
            {{ knp_pagination_render(tickets,'@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig',{},{
            'position': 'centered',
            'rounded': true,
            }) }}
        </div>
    </div>
</div>


<script>
    $('#bFecha').daterangepicker({
        
        "drops": "up",
        "startDate":"{{dateInicio}}",
        "endDate": "{{dateFin}}",
        "locale": {
            "format": "YYYY-MM-DD",
            "applyLabel": "Apply",
            "cancelLabel": "Cancel",
        }
    }, function(start, end, label) {
    console.log('New date range selected: ' + start.format('YYYY-MM-DD') + ' to ' + end.format('YYYY-MM-DD') + ' (predefined range: ' + label + ')');
    
    });
    function buscar(status){
        $("#bStatus").val(status);
        $("#bForm").submit();
    }
</script>

{% endblock %}
