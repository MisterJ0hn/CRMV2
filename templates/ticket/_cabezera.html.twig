<div class="card">
    <div class="card-body">
        {% if ticketTipo is defined  %}
            <span class="badge badge-{{ticketTipo.colorBadge}}">{{ticketTipo.nombre}}</span>
        {% endif %}
        
        <h1>Folio: {{contrato.folio}} </h1>

        <h4>Datos Cliente</h4>
        <div class="row">
            <div class="col-sm-6 col-md-3">
            <small class="text-muted">Nombre Cliente</small><br>
                {{contrato.nombre}}
            </div>
            <div class="col-sm-6 col-md-3">
            <small class="text-muted">Fecha Contrato</small><br>
                {{contrato.fechaCreacion|date("Y-m-d")}}
            </div>
            <div class="col-sm-6 col-md-2">
            <small class="text-muted">Cerrador</small><br>
                {{contrato.agenda.abogado.nombre}}
            </div>
            <div class="col-sm-6 col-md-2">
            <small class="text-muted">Tramitador</small><br>
                {{contrato.tramitador.nombre}}
            </div>
            <div class="col-sm-6 col-md-2">
                <i class="fas fa-traffic-light"></i>
                <br>
                 {% set pago = proximoPago(contrato.id) %}
                {% if pago %}
                    <input type="hidden" class="pago" value="{{pago|date('Y-m-d')}}">
                    {{semaforoContrato(pago|date('Y-m-d'))|raw}}
                {% endif %}
            </div>
        </div>
    </div>
</div>