{{ form_start(form) }}
	<div class="card">
		<div class="card-header"><h1>Datos abogado</h1></div>
		<div class="card-body">
			<section>
		
				<div class="row">
					<div class="col-sm-6 col-md-3">
						<small class="text-muted">{{nombreCuenta|default('Compañia')}} *</small>
						
						<select name="cboEmpresa[]" class="select2" multiple="multiple" data-placeholder="Selecciona compañias" style="width: 100%;" required>
							<option></option>
							{% for cuenta in cuentas %}
								<option value="{{cuenta.id}}"
								{% if cuentas_sel is defined %}
									{% for usuarioCuent in cuentas_sel %}
										{% if usuarioCuent.cuenta.id==cuenta.id %}
											selected
										{% endif %}
									{% endfor %}
								{% endif %}
								>{{cuenta.nombre}}</option>
							{% endfor %}}
						</select>
					</div>
					<div class="col-sm-6 col-md-6">
						<small class="text-muted">Nombre *</small>
						{{form_row(form.nombre,{'label':false,'attr':{'class':'form-control','required':true}})}}
					</div>
					<div class="col-sm-6 col-md-3">
						<small class="text-muted">Colaborador *</small>
						
						<select name="cboTipoDocumento" class="form-control" required>
							<option></option>
							{% for tipo_documento in tipo_documentos %}
								<option value="{{tipo_documento.id}}"
								{% if usuario.tipoDocumento.id is defined %}

										{% if  usuario.tipoDocumento.id ==tipo_documento.id %}
											selected
										{% endif %}
								
								{% endif %}
								>{{tipo_documento.nombre}}</option>
							{% endfor %}}
						</select>
					</div>
					<div class="col-sm-6 col-md-3">
						<small class="text-muted">Rut *</small>
						{{form_row(form.rut,{'label':false,'attr':{'class':'form-control','placeholder':'Rut','required':true}})}}
						
					</div>
					<div class="col-sm-6 col-md-3">
					<small class="text-muted">Correo *</small>
						{{form_row(form.correo,{'label':false,'attr':{'class':'form-control','required':true}})}}
					</div>
					<div class="col-sm-6 col-md-3">
						<small class="text-muted">Telefono Personal *</small>
						{{form_row(form.telefono,{'label':false,'attr':{'class':'form-control','required':true}})}}
						
					</div>
					<div class="col-sm-6 col-md-3">
						<small class="text-muted">Telefono Empresa *</small>
						{{form_row(form.whatsapp,{'label':false,'attr':{'class':'form-control','required':true}})}}
						
					</div>
					<div class="col-sm-6 col-md-3">
						<small class="text-muted">Dirección *</small>
						{{form_row(form.direccion,{'label':false,'attr':{'class':'form-control','required':true}})}}
						
					</div>
					<div class="col-sm-6 col-md-3">
						<small class="text-muted">Sexo *</small>
						{{form_row(form.sexo,{'label':false,'attr':{'class':'form-control','required':true}})}}
						
					</div>
					
					
					<div class="col-sm-6 col-md-3">
						<small class="text-muted">Color para calendario </small> 
						<div class="row">
							<div class="col-8">
								{{form_row(form.color,{'label':false,'attr':{'class':'form-control my-colorpicker1','novalidate': 'novalidate'}})}}
							</div>
							<div class="col-2">
								<div class="input-group-append">
									<span class="input-group-text"><i class="fas fa-square"></i></span>
								</div>
							</div>
						</div>
					</div>
					<div class="col-sm-6 col-md-3">
						<small class="text-muted">FechaIngreso *</small>
						<input type="text" name="fecha_ingreso" class="form-control date" value="{{usuario.fechaActivacion?usuario.fechaActivacion|date('Y-m-d'):''}}" required>
					</div>
					<div class="col-sm-6 col-md-3">
						<small class="text-muted">FechaNacimiento *</small>
						<input type="text" name="fecha_nacimiento" class="form-control date" value="{{usuario.fechaNacimiento?usuario.fechaNacimiento|date('Y-m-d'):''}}" required>
					</div>
				</div>
			
			</section>
			<section>
				<hr>
				<h1>Datos de Sesión</h1>
				<div class="row">
					<div class="col-sm-6 col-md-3">
						<small class="text-muted">Usuario</small>
						{{form_row(form.username,{'label':false,'attr':{'class':'form-control','placeholder':'Usuario'}})}}
					</div>
					<div class="col-sm-6 col-md-3">
						<small class="text-muted">Password</small>
						{{form_row(form.password,{'label':false, 'attr':{'class':'form-control', 'placeholder':'******' ,'type':'password','required':false}})}}
						{{form_row(form.passwordAnt,{'label':false, 'attr':{'class':'form-control', 'placeholder':'******' ,'type':'password','required':false}})}}
					</div>
				</div>
			
			</section>
		
			<section>
				<hr>
				<h1>Horario Atención</h1>
				<div class="row">
					<div class="col-sm-12 col-md-3"><h4>Sobre Cupo</h4></div>
					<div class="col-sm-12 col-md-3">{{form_row(form.sobrecupo,{'label':false, 'attr':{'class':'form-control'}})}}</div>
				</div>
				<div class="row">
					<div class="col-sm-12 col-md-3"><h4>Día</h4></div>
					<div class="col-sm-4 col-md-3"><h4>Inicio</h4>
						
					</div>
					<div class="col-sm-4 col-md-3"><h4 >Fin</h4>
						
					</div>
					<div class="col-sm-4 col-md-3"><h4 >Habilitado</h4>
						
					</div>
				</div>
				<div class="row">
					<div class="col-sm-12 col-md-3">Lunes</div>
					<div class="col-sm-4 col-md-3">
						{{form_row(form.lunesStart,{'label':false})}}
					</div>
					<div class="col-sm-4 col-md-3">
						{{form_row(form.lunesEnd,{'label':false})}}
					</div>
					<div class="col-sm-4 col-md-3">
						{{form_row(form.lunes,{'label':false, 'attr':{'data-bootstrap-switch':''}})}}
					</div>
				</div>
				<div class="row">
					<div class="col-sm-12 col-md-3">Martes</div>
					<div class="col-sm-4 col-md-3">
						{{form_row(form.martesStart,{'label':false})}}
					</div>
					<div class="col-sm-4 col-md-3">
						{{form_row(form.martesEnd,{'label':false})}}
					</div>
					<div class="col-sm-4 col-md-3">
						{{form_row(form.martes,{'label':false, 'attr':{'data-bootstrap-switch':''}})}}
					</div>
				</div>
				<div class="row">
					<div class="col-sm-12 col-md-3">Miercoles</div>
					<div class="col-sm-4 col-md-3">
						{{form_row(form.miercolesStart,{'label':false})}}
					</div>
					<div class="col-sm-4 col-md-3">
						{{form_row(form.miercolesEnd,{'label':false})}}
					</div>
					<div class="col-sm-4 col-md-3">
						{{form_row(form.miercoles,{'label':false, 'attr':{'data-bootstrap-switch':''}})}}
					</div>
				</div>
				<div class="row">
					<div class="col-sm-12 col-md-3">Jueves</div>
					<div class="col-sm-4 col-md-3">
						{{form_row(form.juevesStart,{'label':false})}}
					</div>
					<div class="col-sm-4 col-md-3">
						{{form_row(form.juevesEnd,{'label':false})}}
					</div>
					<div class="col-sm-4 col-md-3">
						{{form_row(form.jueves,{'label':false, 'attr':{'data-bootstrap-switch':''}})}}
					</div>
				</div>
				<div class="row">
					<div class="col-sm-12 col-md-3">Viernes</div>
					<div class="col-sm-4 col-md-3">
						{{form_row(form.viernesStart,{'label':false})}}
					</div>
					<div class="col-sm-4 col-md-3">
						{{form_row(form.viernesEnd,{'label':false})}}
					</div>
					<div class="col-sm-4 col-md-3">
						{{form_row(form.viernes,{'label':false, 'attr':{'data-bootstrap-switch':''}})}}
					</div>
				</div>
				<div class="row">
					<div class="col-sm-12 col-md-3">Sabado</div>
					<div class="col-sm-4 col-md-3">
						{{form_row(form.sabadoStart,{'label':false})}}
					</div>
					<div class="col-sm-4 col-md-3">
						{{form_row(form.sabadoEnd,{'label':false})}}
					</div>
					<div class="col-sm-4 col-md-3">
						{{form_row(form.sabado,{'label':false, 'attr':{'data-bootstrap-switch':''}})}}
					</div>
				</div>
				<div class="row">
					<div class="col-sm-12 col-md-3">Domingo</div>
					<div class="col-sm-4 col-md-3">
						{{form_row(form.domingoStart,{'label':false})}}
					</div>
					<div class="col-sm-4 col-md-3">
						{{form_row(form.domingoEnd,{'label':false})}}
					</div>
					<div class="col-sm-4 col-md-3">
						{{form_row(form.domingo,{'label':false, 'attr':{'data-bootstrap-switch':''}})}}
					</div>
				</div>
			</section>
		</div>
		<div class="card-footer">
			<button class="btn btn-primary">{{ button_label|default('Crear') }}</button>
		</div>
	</div>

	

    
	
	
	<script>
		
		$(function () {
			//Initialize Select2 Elements
			$('.select2').select2();
			//Colorpicker
			$('.my-colorpicker1').colorpicker();

			$('.my-colorpicker1').on('colorpickerChange', function(event) {
				$('.fa-square').css('color', event.color.toString());
			});

			$('.fa-square').css('color', '{{usuario.color|default("")}}');
		});

</script>
{{ form_end(form) }}
