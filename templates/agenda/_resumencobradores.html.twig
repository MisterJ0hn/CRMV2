<div class="card card-outline card-info">
    <div class="card-header">
      <h3 class="card-title">Resumen por agendador 
          {% if nombre_status != '' %}
          <strong>en {{nombre_status}}</strong>
          {% endif %}
        </h3>

      <div class="card-tools">
        <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i>
        </button>
        <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-times"></i></button>
      </div>
    </div>
    <div class="card-body">
 
        {% for informe in informes %}
            {% if status == 1 %}
            <div class="row">
                <div class="col-2">

                <p>{{informe[0].cobranza.usuarioRegistro.nombre}}</p>
                </div>
                <div class="col-9">
                    <div class="progress mb-3">
                        <div class="progress-bar bg-success" role="progressbar" aria-valuenow="{{informe[1]/total}}" aria-valuemin="0"
                        aria-valuemax="100" style="width: {{informe[1]/total*100}}%">
                            <span class="sr-only">40% Complete (success)</span>
                        </div>
                    </div>
                </div>
                <div class="col-1">
                    <p>{{informe[1]|number_format(0, ',', '.')}}</p>
                </div>
            </div>
            {% else %}
            <div class="row">
            <div class="col-2">

            <p>{{informe[0].cobranza.usuarioRegistro.nombre}}</p>
            </div>
            <div class="col-9">
                <div class="progress mb-3">
                    <div class="progress-bar bg-success" role="progressbar" aria-valuenow="{{informe[2]/montoTotal}}" aria-valuemin="0"
                    aria-valuemax="100" style="width: {{informe[2]/montoTotal*100}}%">
                        <span class="sr-only">40% Complete (success)</span>
                    </div>
                </div>
            </div>
            <div class="col-1">
                <p>${{informe[2]|number_format(0, ',', '.')}}</p>
            </div>
        </div>
            {% endif %}
        
    
        {% endfor %}
</div>
</div>